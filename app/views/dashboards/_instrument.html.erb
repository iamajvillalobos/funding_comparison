<% aevo_rate = instrument.hourly_rate(aevo) %>
<% hyperliquid_rate = instrument.hourly_rate(hyperliquid) %>

<tr>
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-0">
    <%= instrument.name %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-neutral-100">
    <%= display_rate_with_color(aevo_rate) %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-neutral-100">
    <%= display_rate_with_color(hyperliquid_rate) %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-neutral-100">
    <%= calculate_arb(aevo_rate, hyperliquid_rate) %>
  </td>
</tr>